<div class="sub-categories-title">
  <h1><%= @category.name %></h1>
</div>

<div class="row">
  <% @products.each do |product| %>
    <div class="col-md-4 col-sm-6 col-xs-12">
      <div class="card-product-category">
        <div class="product-image-container-category">
          <div class="product-info">
            <h1><%= product.name %></h1>
          <div class="product-description">
          <div class="card-info-grid">
            <% if product.photo.key? %>
              <%= cl_image_tag product.photo.key, class: "product-image" %>
            <% else %>
              <%= image_tag "product_placeholder.png", class: "product-image" %>
            <% end %>
          </div>
            <%= product.description %>
          </div>
        </div>
          </div>
      <%= link_to "View Details", product_path(product), class: "btn btn-primary" %>
      </div>
    </div>
  <% end %>
</div>
<div class="d-flex justify-content-center">
  <%== pagy_bootstrap_nav(@pagy) if @pagy.pages > 1 %>
</div>
<div class="back-to-categories">
  <%= link_to 'Back to Categories', categories_path, class: 'btn btn-primary' %>
</div>
