      }
    });
  });
</script>

<style>
  .product-description {
    max-height: 30px; /* Adjust the height as needed */
    overflow: hidden;
    /* text-overflow: ellipsis; */
    width: 100%;
    a {
      text-decoration: none;
    }
  }

  /* CSS for Expanded Description */
  .product-description.expanded {
    max-height: none;
    overflow: visible;
    a {
      text-decoration: none;
    }
  }

.card-product {
  height: 188px;
  width: 410px;
}

.card-product .product-image {
    height: 300px;
    object-fit: cover;
  }
</style>
